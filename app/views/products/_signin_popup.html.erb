<div id="signin_modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span>
        </button>
        <h4 class="modal-title" id="myModalLabel"> Inicio de sesión </h4>
      </div>
      <div class="modal-body">
        <p> Necesitás iniciar sesión</p>
        <%= link_to "Iniciar con Twitter", "/auth/twitter", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>