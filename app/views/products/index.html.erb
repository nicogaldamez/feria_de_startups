<div id="products">
  <aside class="col-md-3 col-sm-3">
    
    <%= form_tag products_path, method: :get do %>
        <%= text_field_tag :query, params[:query], placeholder: 'Buscar producto', 
            class: 'form-control search input-lg', autocomplete: 'off' %>
    <% end %>
    
    <% if signed_in? %>
      <button class="btn btn-success" id="btn_new_product" data-toggle="modal" data-target="#newproduct_modal"> 
        Agregar un producto 
      </button>
      
      <%= render 'new_product' %>
    <% else %>
      <!-- Login -->
      <button class="btn btn-success" id="btn_new_product" data-toggle="modal" data-target="#signin_modal"> 
        Agregar un producto 
      </button>
      
      <%= render 'signin_popup' %>
    
    <% end %>
    
    <div class="about">
      <p class="text-muted">
      La Feria de Startups es el lugar de encuentro de las startups. Exponé un producto o servicio en 
      la feria y obtené la opinión del resto de los usuarios. 
      </p>
    </div>
    
  </aside>
  
  <div class="col-md-9 col-sm-9 ">
    <% if !params[:query].nil? %>
      <p class="filter"> 
        <span class="filter_by"> Filtrando por: <b> <%= params[:query]  %> </b> </span>
        <%= link_to root_path do  %>
          <span class="glyphicon glyphicon-remove"> </span>
        <% end %>
      </p>
    <% end %>
    
    <div class="list">
      <%= render partial: 'product', collection: @products %>
    </ul>
  
  </div>
</div>