<div id="products">
  <aside class="col-md-3 col-sm-3">
    
    <%= form_tag products_path, method: :get do %>
        <%= text_field_tag :query, params[:query], placeholder: 'Buscar producto', 
            class: 'form-control search input-lg', autocomplete: 'off', required: true %>
    <% end %>
    
    <% if signed_in? %>
      <%= link_to "Agregar un producto", new_product_path, class: "btn btn-success", id: "btn_new_product",
                data: { target: "#modal", modalsize: 'small', modaltitle: 'Agregar un producto' } %>
    <% else %>
      <!-- Login -->
      <button class="btn btn-success" id="btn_new_product" data-toggle="modal" data-target="#signin_modal"> 
        Agregar un producto 
      </button>
      
      <%= render 'signin_popup' %>
    
    <% end %>
    
    <div class="about">
      <p class="text-muted">
      La Feria de Startups es el lugar de encuentro de las startups. Exponé un producto o servicio en 
      la feria y obtené la opinión del resto de los usuarios. 
      </p>
      
      <a href="https://twitter.com/feriadestartups" class="twitter-follow-button" data-show-count="false" data-lang="es" data-size="large">Seguir a @feriadestartups</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      
    </div>
    
  </aside>
  
  <div class="col-md-9 col-sm-9 ">
    <% if !params[:query].nil? %>
      <p class="filter"> 
        <span class="filter_by"> Filtrando por: <b> <%= params[:query]  %> </b> </span>
        <%= link_to root_path do  %>
          <span class="glyphicon glyphicon-remove"> </span>
        <% end %>
      </p>
    <% end %>
    
    <div class="list">
      <%= render partial: 'product', collection: @products, as: 'product' %>
      
    </div>
  </div>
  
  <p id="end_of_list" class="col-md-12 col-sm-12">
    Estos han sido los productos destacados del día. Te esperamos mañana :)
  </p>
</div>


<!-- POPUPS -->
<%= render 'layouts/small_popup' %>

<!-- OBLIGO A PONER EMAIL -->
<% if signed_in? && current_user.email.nil? %>
  <%= javascript_tag "openModal('small', '#{edit_user_path(current_user)}', 'Mis Datos', { closeDisabled: true })" %>
<% end %>