<header>

  <h1> 
    <%= link_to image_tag("logo.jpg"), root_path, class: 'logo' %>
    Feria de Startups 
  </h1>

  <% if signed_in? %>
  
    <div id="user_nav" class="dropdown">
      <a href="#" class="user_name dropdown-toggle" data-toggle="dropdown">
        <%= image_tag current_user.portrait('mini'), class: 'avatar'%>
        <%= current_user.name %> <b class="caret"></b>
      </a>
      <ul class="dropdown-menu" role="menu">	
        <li> <%= link_to "Mis datos", edit_user_path(current_user),  
            data: { target: "#modal", modalsize: 'small', modaltitle: 'Mis Datos' } %> </li>				
        <li> <%= link_to "Cerrar sesión", signout_path, method: "delete" %> </li>				
      </ul>
    </div>
    
  <% else %>
  
    <div id="user_nav">
      <%= link_to "Iniciar Sesión", "/auth/twitter"%>
    </div>
    
  <% end %>  
  
</header>