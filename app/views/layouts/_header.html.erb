<header>

  <h1> 
    <%= link_to image_tag("logo.jpg"), root_path, class: 'logo' %>
    <span class="text"> 
      Feria de Startups <br>
      <small> Mostrate. Sumate. Inspirate. </small>
    </span>
  </h1>

  <% if signed_in? %>
  
    <div id="user_nav">
      <%= link_to "Acerca", "https://medium.com/@feriadestartups/acerca-de-la-feria-de-startups-9b4fbab432d5", target: '_blank', id: 'blog_link' %>
      <%= link_to "Blog", "http://medium.com/@feriadestartups", target: '_blank', id: 'blog_link' %>
      <span class="dropdown">
        <a href="#" class="user_name dropdown-toggle" data-toggle="dropdown">
          <%= image_tag current_user.portrait('mini'), class: 'avatar'%>
          <%= current_user.name %> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li> <%= link_to "Mi perfil", current_user %>  </li>
          <li> <%= link_to "Mis datos", edit_user_path(current_user),
              data: { target: "#modal", modalsize: 'small', modaltitle: 'Mis Datos' } %> </li>
          <li> <%= link_to "Cerrar sesión", signout_path, method: "delete" %> </li>
          <% if allow?(:admin, :index) %>
            <li role="presentation" class="divider"></li>
            <li role="presentation" class="dropdown-header">Administración</li>
            <li> <%= link_to "Inicio", admin_index_path %> </li>
            <li> <%= link_to "Productos", products_admin_index_path %> </li>
            <li> <%= link_to "Usuarios", users_path %> </li>
          <% end %>
        </ul>
      </span>
    </div>
    
  <% else %>
  
    <div id="user_nav">
      <%= link_to "Blog", "http://medium.com/@feriadestartups", target: '_blank', id: 'blog_link' %>
      <%= link_to "Iniciar Sesión", "/auth/twitter"%>
    </div>
    
  <% end %>  
  
</header>