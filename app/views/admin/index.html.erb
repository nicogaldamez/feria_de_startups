<div class="container admin_panel">
  <h2> Panel de Administración </h2>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> Últimos Productos</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @products.each do |product| %>
            <li> 
              <b> <%= link_to product.name, product.url %> </b> - 
              <%= product.user.name %> -
              <%= date_to_text(product.created_at) %>
              | <%= tweet_link(product, 'tweet-product') %>
            </li>
          <% end %>
        </ul>
        <%= link_to "Ver todos", products_admin_index_path %>
      </div>
      <div class="panel-footer"> Cantidad total de productos: <b> <%= @products_count %> </b> </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> Últimos Usuarios </h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li> 
              <b> <%= twitter_profile_link(user.username) %> </b> - 
              <%= date_to_text(user.created_at) %>
            </li>
          <% end %>
        </ul>
        <%= link_to "Ver todos", users_path %>
      </div>
      <div class="panel-footer"> Cantidad total de usuarios: <b> <%= @users_count %> </b> </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> Últimos Votos </h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @votes.each do |vote| %>
            <li> 
              <b> <%= vote.user.name %> </b>
              votó
              <%= link_to vote.product.name, vote.product.url %> 
              -
              <%= date_to_text(vote.created_at) %>
            </li>
          <% end %>
        </ul>
        <%= link_to "Ver usuarios", users_path %>
      </div>
    </div>
  </div>
</div>

