<%= form_for @user, id: 'settings_form', 
      html: {role: :form, 'data-model' => 'user', autocomplete: 'off'} do |f| %>
  <div id="error_explanation" class="errors">
  </div>
  
  <div class="row">
    <div class="form-group col-md-8">
      <%= f.text_field :email, placeholder: "Ingresá tu correo electrónico", required: true, 
        class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="checkbox col-md-8">
      <label>
        <%= f.check_box :receive_notifications %> Recibir notificaciones si mis productos reciben votos
      </label>
    </div>
  </div>
 
	<div class="submit">
		<%= f.submit "Guardar", class: 'btn btn-success' %>			
	</div>
<% end %>