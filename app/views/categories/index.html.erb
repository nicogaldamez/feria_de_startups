<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2> 
        Categorías 
        <%= link_to "Nueva categoría", new_category_path, class: "btn btn-md btn-primary", id: "btn_new_category",
                  data: { target: "#modal", modalsize: 'small', modaltitle: 'Nueva categoría' } %>
      </h2>
    </div>
  </div>
    
  <table class="table table-bordered table-bordered">
    <thead>
      <tr class="header-highlight">
        <th>Nombre</th>
        <th>Incluye</th>
        <th>Excluye</th>
        <th class="actions">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= render @categories %>
    
      <% if @categories.count == 0 %>
        <tr> <td colspan="4" class="text-center"> No hay categorías </td> </tr>
      <% end %>
    </tbody>
  </table>
</div>